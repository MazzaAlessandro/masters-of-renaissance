<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="defaultProductionOutputPane" prefHeight="500.0" prefWidth="600.0" styleClass="bg-light" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.view.gui.sceneController.DefaultProductionOutputController">
   <children>
      <Label layoutX="106.0" layoutY="68.0" prefHeight="22.0" prefWidth="390.0" text="Select your Default Production Output Resource:">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" layoutX="4.0" layoutY="134.0" prefHeight="100.0" prefWidth="593.0" spacing="100.0">
         <children>
            <ImageView fx:id="BLUE" fitHeight="100.0" fitWidth="90.0" onMouseClicked="#onClick" opacity="0.6" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/resources/shield.png" />
               </image>
            </ImageView>
            <ImageView fx:id="PURPLE" fitHeight="100.0" fitWidth="100.0" onMouseClicked="#onClick" opacity="0.6" pickOnBounds="true">
               <image>
                  <Image url="@../images/resources/servant.png" />
               </image>
            </ImageView>
         </children>
      </HBox>
      <HBox alignment="CENTER" layoutX="4.0" layoutY="283.0" prefHeight="100.0" prefWidth="594.0" spacing="100.0">
         <children>
            <ImageView fx:id="GREY" fitHeight="100.0" fitWidth="100.0" onMouseClicked="#onClick" opacity="0.6" pickOnBounds="true">
               <image>
                  <Image url="@../images/resources/stone.png" />
               </image>
            </ImageView>
            <ImageView fx:id="YELLOW" fitHeight="80.0" fitWidth="100.0" onMouseClicked="#onClick" opacity="0.6" pickOnBounds="true">
               <image>
                  <Image url="@../images/resources/coin.png" />
               </image>
            </ImageView>
         </children>
      </HBox>
      <Button fx:id="enterBtn" layoutX="221.0" layoutY="434.0" mnemonicParsing="false" onAction="#confirmUpdate" styleClass="btn-md" text="Enter" />
   </children>
</AnchorPane>
