<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="discardLeadersPane" prefHeight="500.0" prefWidth="600.0" styleClass="bg-light" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <AnchorPane prefHeight="400.0" prefWidth="600.0">
            <children>
                <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0" AnchorPane.topAnchor="80.0">
                    <children>
                        <Label alignment="CENTER" prefWidth="600.0" text="Select Leaders to Discard">
                            <VBox.margin>
                                <Insets bottom="10.0" top="10.0" />
                            </VBox.margin>
                     <font>
                        <Font size="18.0" />
                     </font>
                        </Label>
                        <HBox alignment="CENTER" prefHeight="300.0" prefWidth="600.0" spacing="20.0">
                            <children>
                                <ImageView fx:id="leader1" fitHeight="300.0" fitWidth="200.0" opacity="0.6" pickOnBounds="true" smooth="false">
                                </ImageView>
                                <ImageView fx:id="leader2" fitHeight="300.0" fitWidth="200.0" opacity="0.6" pickOnBounds="true" smooth="false">
                                </ImageView>
                            </children>
                            <opaqueInsets>
                                <Insets />
                            </opaqueInsets>
                        </HBox>
                        <HBox alignment="BOTTOM_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                            <children>
                                <Button fx:id="discardBtn" alignment="CENTER" disable="true" mnemonicParsing="false" styleClass="btn-md" text="Discard" />
                                <Button fx:id="skipBtn" mnemonicParsing="false" styleClass="btn-md" text="Skip" />
                            </children>
                            <padding>
                                <Insets bottom="5.0" right="20.0" />
                            </padding>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </AnchorPane>
    </top>

</BorderPane>
