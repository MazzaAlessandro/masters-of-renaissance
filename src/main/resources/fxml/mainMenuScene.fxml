<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="mainMenuPane" prefHeight="600.0" prefWidth="600.0" styleClass="fancyBgPane" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.view.gui.sceneController.MainMenuController">
    <children>
        <VBox alignment="CENTER" layoutX="150.0" layoutY="249.0" prefHeight="351.0" prefWidth="300.0" spacing="20.0">
            <children>
                <Button fx:id="startBtn" mnemonicParsing="false" onAction="#openConnectPopup" prefHeight="65.0" prefWidth="300.0" styleClass="btn-lg" text="CONNECT TO THE  SERVER" textAlignment="CENTER">
               </Button>
                <Button fx:id="quitBtn" cancelButton="true" mnemonicParsing="false" onAction="#quitGame" pickOnBounds="false" styleClass="btn-lg" text="QUIT" textAlignment="CENTER" />
            </children>
         <padding>
            <Insets bottom="15.0" top="15.0" />
         </padding>
        </VBox>
    </children>

</AnchorPane>
