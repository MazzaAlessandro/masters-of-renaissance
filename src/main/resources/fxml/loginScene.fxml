<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="loginPane" prefHeight="600.0" prefWidth="600.0" styleClass="fancyBgPane" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.view.gui.sceneController.LoginController">
      <VBox alignment="CENTER" layoutX="100.0" prefHeight="400.0" prefWidth="400.0" spacing="20.0" AnchorPane.bottomAnchor="0.0">
            <Label styleClass="label-lg" text="Enter a unique nickname" />
            <TextField fx:id="nicknameField">
         <font>
            <Font size="22.0" />
         </font></TextField>
            <Button fx:id="okBtn" mnemonicParsing="false" onAction="#nicknameUpdate" styleClass="btn-lg" text="OK" />
      </VBox>
</AnchorPane>
